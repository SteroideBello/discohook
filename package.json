{
  "name": "discohook",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production SERVER=true node --max-http-header-size=81920 ./lib/core/server.js",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack",
    "build:server": "cross-env NODE_ENV=production babel src -d lib -x '.js,.jsx,.ts,.tsx' -s",
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS='--max-http-header-size=81920' webpack-dev-server",
    "test": "cross-env TZ=UTC NODE_ENV=test jest --config .jestrc.json",
    "test:watch": "pnpm run test -- --watch",
    "test:cov": "pnpm run test -- --coverage --collectCoverageFrom=\"src/**/*.{ts,tsx}\"",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "pnpm run lint -- --fix",
    "lint:error": "pnpm run lint -- --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm run typecheck -- --watch",
    "format": "prettier --write ./src/**/*",
    "format:check": "prettier --check ./src/**/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaylineko/discohook.git"
  },
  "author": "Jay <jaylineko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaylineko/discohook/issues"
  },
  "homepage": "https://github.com/jaylineko/discohook#readme",
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "@koa/router": "^8.0.5",
    "core-js": "^3.6.4",
    "date-fns": "^2.9.0",
    "highlight.js": "^9.17.1",
    "immer": "^5.3.2",
    "isbot": "^2.5.4",
    "koa": "^2.11.0",
    "koa-conditional-get": "^2.0.0",
    "koa-static": "^5.0.0",
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "regenerator-runtime": "^0.13.3",
    "simple-markdown": "^0.7.2",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@testing-library/dom": "^6.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^24.9.0",
    "@types/koa": "^2.11.0",
    "@types/koa-conditional-get": "^2.0.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^13.1.8",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.2",
    "@types/testing-library__react": "^9.1.2",
    "@types/testing-library__user-event": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "copy-webpack-plugin": "^5.1.1",
