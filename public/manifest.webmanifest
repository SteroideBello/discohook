{
  "$schema": "http://json.schemastore.org/web-manifest",
  "name": "Discohook",
  "short_name": "Discohook",
  "start_url": "/",
  "description": "An easy-to-use tool for building and sending Discord messages and embeds using webhooks.",
  "display": "standalone",
  "background_color": "#36393f",
  "theme_color": "#7289da",
  "lang": "en-US",
  "icons": [
    {
      "src": "/icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "maskable"
    }
  ]
}
